{
  "name": "evergreen-ui",
  "version": "4.15.0",
  "description": "ðŸŒ² React UI Kit by Segment ðŸŒ²",
  "contributors": [
    "Jeroen Ransijn (https://jssr.design/)",
    "Roland Warmerdam (https://roland.codes)",
    "Matt Shwery (https://mattshwery.com)"
  ],
  "keywords": [
    "evergreen",
    "segment",
    "ui",
    "react"
  ],
  "repository": "segmentio/evergreen",
  "license": "MIT",
  "main": "commonjs/index.js",
  "module": "esm/index.js",
  "files": [
    "commonjs",
    "esm"
  ],
  "sideEffects": false,
  "scripts": {
    "test": "xo && ava",
    "prepublishOnly": "rm -rf esm commonjs && yarn run build",
    "dev": "start-storybook -p 6006",
    "create-package": "./tools/create-package.js",
    "create-package:components": "./tools/create-package-components.js",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "build-commonjs": "BABEL_ENV=commonjs babel src --out-dir commonjs --ignore '**/stories','**/test' --source-maps inline",
    "build-esm": "BABEL_ENV=esm babel src --out-dir esm --ignore '**/stories','**/test' --source-maps inline",
    "build": "concurrently --names 'commonjs,esm' 'yarn run build-commonjs' 'yarn run build-esm'",
    "clean": "git clean -Xdf",
    "release": "np",
    "deploy-docs": "cd docs && yarn install && yarn deploy",
    "postpublish": "yarn deploy-docs",
    "chromatic": "chromatic test --storybook-addon --script-name dev --app-code=alj8xoz1ujt"
  },
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@blueprintjs/icons": "^3.2.0",
    "@types/arrify": "^1.0.4",
    "@types/classnames": "^2.2.7",
    "@types/dom-helpers": "^3.4.1",
    "@types/fuzzaldrin-plus": "^0.6.0",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@types/react-transition-group": "^2.0.16",
    "@types/tinycolor2": "^1.4.1",
    "@types/ui-box": "^1.4.0",
    "arrify": "^1.0.1",
    "classnames": "^2.2.6",
    "dom-helpers": "^3.2.1",
    "downshift": "^1.31.16",
    "fuzzaldrin-plus": "^0.6.0",
    "glamor": "^2.20.40",
    "lodash.debounce": "^4.0.8",
    "lodash.mapvalues": "^4.6.0",
    "prop-types": "^15.6.2",
    "react-scrollbar-size": "^2.0.2",
    "react-tiny-virtual-list": "^2.1.4",
    "react-transition-group": "^2.5.0",
    "tinycolor2": "^1.4.1",
    "ui-box": "^1.4.0"
  },
  "peerDependencies": {
    "react": "^16.3.0",
    "react-dom": "^16.3.0"
  },
  "devDependencies": {
    "@reactions/component": "^2.0.2",
    "@storybook/addon-actions": "^3.4.11",
    "@storybook/addon-links": "^3.4.11",
    "@storybook/addon-options": "^3.4.11",
    "@storybook/addons": "^3.4.11",
    "@storybook/react": "^3.4.11",
    "@types/storybook__react": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "ava": "^1.3.1",
    "awesome-typescript-loader": "^5.2.1",
    "concurrently": "^4.0.1",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-xo-react": "^0.19.0",
    "eslint-config-xo-typescript": "^0.9.0",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "execa": "^1.0.0",
    "faker": "^4.1.0",
    "file-loader": "^2.0.0",
    "fs-extra": "^7.0.0",
    "np": "^4.0.2",
    "prettier": "^1.16.4",
    "react": "^16.8.6",
    "react-chromatic": "^0.8.4",
    "react-docgen-typescript-loader": "^3.1.0",
    "react-docgen-typescript-webpack-plugin": "^1.1.0",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "sinon": "^7.0.0",
    "size-limit": "^0.21.1",
    "starwars-names": "^1.6.0",
    "typescript": "^3.4.1",
    "url-loader": "^1.1.2",
    "xo": "^0.24.0"
  },
  "xo": {
    "parser": "@typescript-eslint/parser",
    "typescript": true,
    "ignores": [
      "docs",
      "tools",
      "src/**/stories",
      "src/**/test",
      "**/*.js"
    ],
    "extends": [
      "xo-typescript",
      "xo-react",
      "prettier",
      "prettier/react"
    ],
    "extensions": [
      "tsx",
      "ts"
    ],
    "envs": [
      "browser"
    ],
    "4space": true,
    "semicolon": false,
    "rules": {
      "capitalized-comments": [
        "off"
      ],
      "indent": [
        "off"
      ],
      "import/named": [
        "off"
      ],
      "@typescript-eslint/indent": [
        "error",
        2
      ],
      "@typescript-eslint/interface-name-prefix": [
        "error",
        "always"
      ],
      "@typescript-eslint/member-delimiter-style": [
        "error",
        {
          "multiline": {
            "delimiter": "none",
            "requireLast": false
          },
          "singleline": {
            "delimiter": "none",
            "requireLast": false
          }
        },
        2
      ],
      "@typescript-eslint/explicit-function-return-type": [
        "off"
      ],
      "react/jsx-indent-props": [
        "off"
      ],
      "react/jsx-indent": [
        "off"
      ],
      "react/require-default-props": [
        "off"
      ],
      "react/default-props-match-prop-types": [
        "off"
      ],
      "react/forbid-component-props": [
        "off"
      ],
      "react/jsx-no-bind": [
        "off"
      ],
      "react/jsx-sort-props": [
        "off"
      ],
      "unicorn/filename-case": [
        "off"
      ]
    },
    "settings": {
      "react": {
        "version": "^16.3.0"
      },
      "import/resolver": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "ava": {
    "files": [
      "**/test/**/*.js"
    ],
    "require": [
      "./tools/test-setup"
    ]
  },
  "size-limit": [
    {
      "path": "commonjs/index.js",
      "limit": "204 KB"
    }
  ]
}
